source 'https://rubygems.org'

# Ruby 2.6 is too old for current Jekyll/GitHub Pages dependencies (e.g. `ffi`).
ruby '>= 3.0.0'

gem 'github-pages', group: :jekyll_plugins

group :jekyll_plugins do
  gem 'jekyll-feed'
  gem 'jekyll-sitemap'
  gem 'jekyll-redirect-from'
  gem 'jemoji'
end

# Needed for `jekyll serve` on Ruby >= 3.0 (WEBrick is no longer bundled).
gem 'webrick', '~> 1.8'
